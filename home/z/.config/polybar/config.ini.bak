[global/wm]
margin-top    = 0
margin-bottom = 0
include-file = $HOME/.config/polybar/colors.ini
include-file = $HOME/.config/polybar/modules/system.ini
include-file = $HOME/.config/polybar/modules/info.ini
include-file = $HOME/.config/polybar/modules/util.ini
include-file = $HOME/.config/polybar/modules/network.ini
include-file = $HOME/.config/polybar/modules/misc.ini
include-file = $HOME/.config/polybar/modules/ip.ini
include-file = $HOME/.config/polybar/modules/wired-network.ini
include-file = $HOME/.config/polybar/modules/geolocation.ini

[bar/left]
monitor = eDP-1
monitor-exact = true
override-redirect = true
bottom = false
enable-ipc = true
fixed-center = false
width = 15.5%
height = 14pt
offset-x = 2%
offset-y = 1%
border-size = 0pt
border-color = ${colors.bg-3}
line-size = 1pt
padding-left = 0pt
padding-right = 0pt
module-margin-left = 0pt
module-margin-right = 0pt
background = ${colors.bg-3}
foreground = ${colors.bg-3}
font-0 = Cozette:size=10
font-1 = Cozette:size=10
font-2 = Cozette:size=10
scroll-up = i3.next
scroll-down = i3.prev
modules-center = filesystem slash space slash cpu slash space slash memory slash space slash temperature slash space slash xworkspaces-0



[bar/center]
monitor = eDP-1
monitor-exact = true
override-redirect = true
bottom = false
enable-ipc = true
fixed-center = true
width = 25%
height = 16pt
offset-x = 40%
offset-y = 1%
border-size = 0pt
border-color = ${colors.bg-3}
line-size = 1pt
padding-left = 0pt
padding-right = 0pt
module-margin-left = 0pt
module-margin-right = 0pt
background = ${colors.bg-3}
foreground = ${colors.bg-3}
font-0 = Cozette:size=10
font-1 = Cozette:size=10
font-2 = Cozette:size=10
scroll-up = i3.next
scroll-down = i3.prev
modules-center = space ifname slash space slash ssid slash space slash ip slash space slash geolocation space

[bar/right]
monitor = eDP-1
monitor-exact = true
override-redirect = true
bottom = false
enable-ipc = true
fixed-center = true
width = 15%
height = 16pt
offset-x = 83%
offset-y = 1%
border-size = 0pt
border-color = ${colors.bg-3}
line-size = 1pt
padding-left = 0pt
padding-right = 0pt
module-margin-left = 0pt
module-margin-right = 0pt
background = ${colors.bg-3}
foreground = ${colors.bg-3}
font-0 = Cozette:size=10
font-1 = Cozette:size=10
font-2 = Cozette:size=10
scroll-up = i3.next
scroll-down = i3.prev
modules-center = space date slash space slash time slash space slash space slash space slash battery space




[settings]
screenschange-reload = true
pseduo-transparency = true
